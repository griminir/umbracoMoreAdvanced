@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models

@{
    var bgImage = Model.Value<MediaWithCrops>("bgImage");
    string? bgsrc = bgImage?.MediaUrl();
}

<header class="masthead" style="background-image: url('@bgsrc')">
    <div class="container position-relative px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-md-10 col-lg-8 col-xl-7">
                <div class="site-heading">
                    <h1>@Model.Value("mainHeader")</h1>
                    <span class="subheading">@Model.Value("subHeader")</span>
                </div>
            </div>
        </div>
    </div>
</header>